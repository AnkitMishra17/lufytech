<%- include("partials/header.ejs") %>
    <div class="mt-5 d-flex justify-content-center">
        <form method="POST" action="/" onsubmit="validation()" class=" w-25 mb-5 animated fadeIn slow" >
        <input type="hidden" name="_id" value="<%= employee._id %>">
            <div class="form-group">
                <label for="Name">Name:</label>
                <input type="text" name="Name" class="form-control" id="Name" value="<%= employee.Name %>" aria-describedby="Name" placeholder="Enter name..">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="Email" class="form-control" id="email" value="<%= employee.Email %>" aria-describedby="email" placeholder="Enter email..">
            </div>
            <div class="form-group">
                <label for="number">Phone Number</label>
                <input type="number" name="Phone" class="form-control" id="number" value="<%= employee.Phone %>" aria-describedby="number" placeholder="Enter Contact no..">
            </div>
            <div class="form-group">
                <label for="age"></label>
                <input type="number" name="Age" class="form-control" id="age" value="<%= employee.Age %>" aria-describedby="age" placeholder="Enter Age..">
            </div> 
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" name="Address" class="form-control" id="Address" value="<%= employee.Address %>" aria-describedby="Address" placeholder="Enter Address..">
          </div>
          <%if (employee._id){ %>
            <button type="submit" class="btn submit btn-warning mt-1 w-100"> Update Employee</button>
            <% } else { %>
                <button type="submit" class="btn submit btn-warning mt-1 w-100">Add Employee</button>
            <% } %> 
          <a href="/viewemployee" class="btn submit btn-success w-100 mt-3">View Employees</a>
        </form>
    </div>
    <script>
        function validation(){
        const button = document.querySelector('.submit');
        const Name = document.querySelector('#Name').value;
        const email = document.querySelector('#email').value;
        const number = document.querySelector('#number').value;
        const age = document.querySelector('#age').value;
        const Address = document.querySelector('#Address').value;
            if(Name == "" || email == "" || number == null || age == null || Address == ""){
                alert('Please fill all the details');
                }
            }        

     </script>  
<%- include("partials/footer.ejs") %>